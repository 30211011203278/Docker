<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Customers</title>
  <link rel="stylesheet" href="../css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
<h2 class="mb-4">All Customers</h2>
<a href="/add" class="btn btn-success mb-3">Add New Customer</a>
 <table class="table table-striped table-bordered text-center">
 <thead>
 <tr>
 <th>#</th>
 <th>Full Name</th>
 <th>Gender</th>
 <th>Country</th>
 <th>Actions</th>
 </tr>
 </thead>
<tbody>
<% allData.forEach((customer, index) => { %>
  <tr>
    <th scope="row"><%= index + 1 %></th>
    <td><%= customer.fullName %></td> 
    <td><%= customer.gender %></td> 
    <td><%= customer.country %></td> 
    <td> <a class="btn btn-info btn-sm" href="/view/<%= customer._id %>">
            View
        </a>
        <a class="btn btn-warning btn-sm" href="/edit/<%= customer._id %>">
            Edit
        </a>
        <form action="/delete/<%= customer._id %>?_method=DELETE" method="POST" style="display:inline">
            <button class="btn btn-danger btn-sm">Delete</button>
        </form>
</td>
</tr>
<% }) %>
</tbody>
</table>
</div>
<script src="../js/bootstrap.bundle.min.js"></script>
</body>
</html>