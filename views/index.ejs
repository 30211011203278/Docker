<%- include("../components/navbar") %>

<h2 class="text-center mt-4">All Customers</h2>  <table class="table w-75 mx-auto mt-4">
  <tr>
    <th>Full Name</th>      <th>Gender</th>         <th>Country</th>        <th>Actions</th>
  </tr>

  <% allData.forEach(item => { %>
  <tr>
    <td><%= item.fullName %></td> 
    <td><%= item.gender %></td> 
    <td><%= item.country %></td> 
    <td>
      <a href="/edit/<%= item._id %>" class="btn btn-warning">Edit</a>
      
      <form action="/delete/<%= item._id %>?_method=DELETE" method="POST" style="display:inline;">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>

      <a href="/view/<%= item._id %>" class="btn btn-info">View</a>
    </td>
  </tr>
  <% }) %>
</table>

<a href="/add" class="btn btn-primary d-block w-25 mx-auto">Add New</a>